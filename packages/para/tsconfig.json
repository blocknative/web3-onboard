{
    "extends": "../../tsconfig.json",
    "include": [
        "src/**/*"
    ],
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "declaration": true,
        "declarationDir": "dist",
        "allowSyntheticDefaultImports": true,
        "paths": {
            "*": [
                "./src/*",
                "./node_modules/*"
            ]
        },
        "typeRoots": [
            "node_modules/@types"
        ]
    }
}